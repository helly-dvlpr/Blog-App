<%- include("partials/header") %>


<div class="display_info">
	<div class="ui main text container segment">
		<div class="ui huge header">
			<%= foundblog.title %>
		</div>
		<div class="ui top attched">
			<div class="item">
				<img class="ui centered rounded image" src="<%= foundblog.image %>" height="400px" width="400px">
				<div class="content">
					<%= foundblog.created.toDateString() %>
				</div>
				<div class="description">
					<p> <%= foundblog.body %> </p>
				</div>
				<a class="ui orange basic button" href="/blogs/<%= foundblog._id %>/edit ">UPDATE</a>
				<form id="deleteform" action="/blogs/<%= foundblog._id %>?_method=DELETE" method="post">
					<button class="ui red basic button"> Delete </button>
				</form>
			</div>
		</div>
	</div>
	
	
	
	
</div>

 



<%- include("partials/footer") %>